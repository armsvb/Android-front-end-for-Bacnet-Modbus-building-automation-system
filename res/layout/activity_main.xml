<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <RelativeLayout
        android:id="@+id/first_device_area"
        android:layout_width="60dp"
        android:layout_height="90dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="20dp">
        
	    <ImageView
	        android:id="@+id/first_device"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:contentDescription="@string/image_desc"
	        android:screenOrientation="landscape"
	        android:src="@drawable/lb_pic"
	        android:visibility="invisible" />

    </RelativeLayout>
    
    <RelativeLayout
        android:id="@+id/second_device_area"
        android:layout_width="60dp"
        android:layout_height="90dp"
        android:layout_toRightOf="@id/first_device_area"
        android:layout_marginTop="20dp">
        
        <ImageView
	        android:id="@+id/second_device"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:screenOrientation="landscape"
	        android:contentDescription="@string/image_desc"
	        android:src="@drawable/tstat6_pic"
	        android:visibility="invisible" />
    </RelativeLayout>
    
    <RelativeLayout
        android:id="@+id/third_device_area"
        android:layout_width="60dp"
        android:layout_height="90dp"
        android:layout_toRightOf="@id/second_device_area"
        android:layout_marginTop="20dp">
        
        <ImageView
	        android:id="@+id/third_device"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:screenOrientation="landscape"
	        android:contentDescription="@string/image_desc"
	        android:src="@drawable/tstat6_pic"
	        android:visibility="invisible" />
    </RelativeLayout>
    
    <RelativeLayout
        android:id="@+id/fourth_device_area"
        android:layout_width="60dp"
        android:layout_height="90dp"
        android:layout_toRightOf="@id/third_device_area"
        android:layout_marginTop="20dp">
        
        <ImageView
	        android:id="@+id/fourth_device"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:screenOrientation="landscape"
	        android:contentDescription="@string/image_desc"
	        android:src="@drawable/tstat6_pic"
	        android:visibility="invisible" />
    </RelativeLayout>
    
    
</RelativeLayout>
